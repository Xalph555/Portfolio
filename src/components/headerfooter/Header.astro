---
import Navigation from "./Navigation.astro";
---

<style>
	header {
		background-color: #ffff;
		padding: 1em;
		font-family: "Raleway";
		margin: 0;
		padding: 0;
		box-shadow: 0 2px 2px #00000052;
	}

	.header-content {
		margin: 0 auto;
		width: 100%;
		max-width: min(80%, 1000px);
		display: flex;
		align-items: baseline;
	}

	h1 {
		font-size: 3em;
		margin-right: auto;
		padding-top: 0.5em;
		margin-bottom: 0.5em;
    
	}
  @media screen and (max-width: 744px) {
    .header-content {
      display: block;
      text-align: center;
      max-width: 100%;
      padding-top: 0.5em;
    }

    h1 {
      /* display: none; */
      padding-top: 0.2em;
      margin-bottom: 0em;
    }
  }
  @media screen and (max-width: 415px) {
    h1 {
      display: none;
    }
  }
</style>

<header>
	<div class="header-content">
		<h1>Sean Lee</h1>
		<nav>
			<Navigation />
		</nav>
	</div>
	<div class="colored-strip"></div>
</header>
